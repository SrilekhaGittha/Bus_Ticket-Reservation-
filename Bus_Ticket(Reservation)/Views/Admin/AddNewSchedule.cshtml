@model Bus_Ticket_Reservation_.Models.BusinessLayer.schedule

@{
    ViewBag.Title = "AddNewSchedule";
}
<head>
    <style>
        body {
            background-image: url('../../images/bg.jpg');
        }

        .table-borderless td {
            border: none;
        }
    </style>
</head>
    @using (Html.BeginForm())
    {
        <div class="container my-5 py-4" style="background-color: #f8f9fa; border-radius: 10px;">
            <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
                <h3 class="mb-4">Add New Schedule</h3>
                <table class="table table-borderless">
                    <tr>
                        <td>Route ID</td>
                        <td>
                            @Html.DropDownListFor(model => model.RouteId, (IEnumerable<SelectListItem>)ViewBag.routes, "Select", new { @class = "form-control", required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td>Bus ID</td>
                        <td>
                            @Html.DropDownListFor(model => model.BusId, (IEnumerable<SelectListItem>)ViewBag.busids, "Select", new { @class = "form-control", required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td>Time</td>
                        <td>@Html.TextBoxFor(a => a.Time, new { @class = "form-control", required = "required" })</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="submit" class="btn btn-primary w-100">Add Schedule</button>
                        </td>
                    </tr>
                </table>
                @if (ViewBag.result != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.result
                    </div>
                }
            </div>
        </div>
    }

    <!-- Add the Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    


