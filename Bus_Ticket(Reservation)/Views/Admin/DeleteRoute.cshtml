@model IEnumerable<Bus_Ticket_Reservation_.Models.BusinessLayer.route>
@{
    ViewBag.Title = "DeleteRoute";
}
<head>
<script src="~/Project_Scripts/PreventBack.js"></script>
<script src="~/Project_Scripts/RouteValidation.js"></script>
</head>
@using (Html.BeginForm())
{
    <body style=" background-image: url('../../images/bg.jpg');">
        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="card col-lg-8 col-md-10 col-sm-12 p-4 border rounded">
                <h3 class="mb-4">Delete Route</h3>
                @if (Model != null)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Route ID</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var route in Model)
                            {
                                <tr>
                                    <td><input type="radio" name="routeid" value="@route.routeid" /></td>
                                    <td>@route.routeid</td>
                                    <td>@route.pickup</td>
                                    <td>@route.dropout</td>
                                    <td>@route.cost</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-danger" id="RouteButton">Delete Route</button>
                }

                @if (ViewBag.msg != null)
                {
                    if (ViewBag.msg == "Cannot delete Scheduled route")
                    {
                        <div class="container mt-4">
                            <div class="alert alert-danger">
                                @ViewBag.msg
                            </div>
                            <div>
                                <a href="/Admin/Route" class="btn btn-primary">Back</a>
                            </div>
                        </div>
                    }

                    else
                    {
                        <div class="container mt-4">
                            <div class="alert alert-success">
                                @ViewBag.msg
                            </div>
                            <div>
                                <a href="/Admin/Route" class="btn btn-primary">Back</a>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </body>
}

