@model IEnumerable<Bus_Ticket_Reservation_.Models.BusinessLayer.bus>
@{
    ViewBag.Title = "DeleteBus";
}

<head>
    <script src="~/Project_Scripts/BusValidation.js"></script>
    <style>
        .btn .btn-primary a {
            color: white;
        }

            .btn .btn-primary a:hover {
                text-decoration: none;
            }
    </style>
</head>
@using (Html.BeginForm())
{
  <body style=" background-image: url('../../images/bg.jpg');">
      <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
          <div class="card col-lg-8 col-md-10 col-sm-12 p-4 border rounded">
              <h3 class="mb-4">Delete Bus</h3>
              @if (Model != null)
              {
                  <table class="table table-bordered">
                      <thead>
                          <tr>
                              <th>Select</th>
                              <th>Bus ID</th>
                              <th>Bus Name</th>
                              <th>Bus Type</th>
                              <th>No of seats</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var bus in Model)
                          {
                              <tr>
                                  <td><input type="radio" name="busid" value="@bus.busid" /></td>
                                  <td>@bus.busid</td>
                                  <td>@bus.busname</td>
                                  <td>@bus.bustype</td>
                                  <td>@bus.no_ofseats</td>
                              </tr>
                          }
                      </tbody>
                  </table>
                  <button type="submit" class="btn btn-danger" id="Busbtn">Delete Bus</button>
              }
              @if (ViewBag.msg != null)
              {
                  <div class="alert alert-success mt-4">
                      @ViewBag.msg
                  </div>
                  <div>
                      <a href="/Admin/Bus" class="btn btn-primary">Back</a>
                  </div>
              }
          </div>
      </div>
  </body>
}

<!-- Add the Bootstrap CSS link -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">



