@model IEnumerable<Bus_Ticket_Reservation_.Models.BusinessLayer.bus>

@{
    ViewBag.Title = "UpdateBus";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Project_Styles/UpdateBus.css" rel="stylesheet" />
    <script src="~/Project_Scripts/BusValidation.js"></script>
</head>
@using (Html.BeginForm("UpdateBus1", "Admin"))
{
    <body>
        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="card col-lg-8 col-md-10 col-sm-12 p-4 border">
                <h3 class="mb-4">Update Bus</h3>
                @if (Model != null)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Bus ID</th>
                                <th>Bus Name</th>
                                <th>Bus Type</th>
                                <th>No of Seats</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bus in Model)
                            {
                                <tr>
                                    <td><input type="radio" name="busid" value="@bus.busid" /></td>
                                    <td>@bus.busid</td>
                                    <td>@bus.busname</td>
                                    <td>@bus.bustype</td>
                                    <td>@bus.no_ofseats</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary" id="Busbtn">Update</button>
                }
            </div>
        </div>    
    </body>
}
</html>
