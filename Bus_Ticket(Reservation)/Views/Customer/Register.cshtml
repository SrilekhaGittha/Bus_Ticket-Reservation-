@model Bus_Ticket_Reservation_.Models.BusinessLayer.Customer
@{
    ViewBag.Title = "Register";
}
@{
    Layout = "~/Views/Shared/_LoginMaster.cshtml";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="~/Project_Styles/register.css" rel="stylesheet" />
    <script src="~/Project_Scripts/Register.js"></script>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Register</h1>
        @using (Html.BeginForm())
        {
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Name">Name:</label>
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control",id= "Name", required = "required" })
                    @Html.ValidationMessageFor(a => a.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label for="Gender">Gender:</label>
                    @Html.DropDownList("Gender", new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Male", Value = "Male" },
                        new SelectListItem { Text = "Female", Value = "Female" },
                        new SelectListItem { Text = "Trans", Value = "Trans" },
                    }, "Select", new { @class = "form-control", id = "Gender", required = "required" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="dob">Date of Birth:</label>
                    @Html.TextBoxFor(a => a.dob, new { @class = "form-control", id = "dob", type = "date", required = "required" })
                    @Html.ValidationMessageFor(a => a.dob, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label for="Email">Email:</label>
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", id = "Email", required = "required" })
                    @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row">
                <!-- Continue adding more form groups as needed -->
                <div class="form-group col-md-6">
                    <label for="contactno">Contact No:</label>
                    @Html.TextBoxFor(a => a.contactno, new { @class = "form-control", id = "contactno", required = "required" })
                    @Html.ValidationMessageFor(a => a.contactno, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="Country">Country:</label>
                    <select id="countryId" name="Country" class="form-control" required>
                    </select>
                    @Html.ValidationMessageFor(a => a.Country, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="State">State:</label>
                    <select id="stateId" name="State" class="form-control" required>
                        <option value="">Select</option>
                    </select>
                    @Html.ValidationMessageFor(a => a.State, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="City">City:</label>
                    @Html.TextBoxFor(a => a.City, new { @class = "form-control", id = "City", required = "required" })
                    @Html.ValidationMessageFor(a => a.City, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="Pincode">Pincode:</label>
                    @Html.TextBoxFor(a => a.Pincode, new { @class = "form-control", id = "Pincode", required = "required" })
                    @Html.ValidationMessageFor(a => a.Pincode, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="Address">Address:</label>
                    @Html.TextBoxFor(a => a.Address, new { @class = "form-control", @id = "Address", required = "required" })
                    @Html.ValidationMessageFor(a => a.Address, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="CustomerType">Customer Type:</label>
                    @Html.DropDownList("CustomerType", new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Government Officer", Value = "Government Officer" },
                        new SelectListItem { Text = "Government Employee", Value = "Government Employee" },
                        new SelectListItem { Text = "Private Employee", Value = "Private Employee" },
                        new SelectListItem { Text = "Student", Value = "Student" },
                        new SelectListItem { Text = "Others", Value = "Others" },
                    }, "Select", new { @class = "form-control", @id = "CustomerType", required = "required" })
                </div>

                <div class="form-group col-md-6">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    @Html.ValidationMessageFor(a => a.password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-6">
                    <label for="confirm">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirm" name="confirm" required>
                </div>
            </div>

            <button id="btn" class="btn btn-primary" type="submit">Register</button>
            <div class="text-center mt-3">
                <p>Existing user?<a href="/Login/Login">Login here</a></p>
            </div>
        }
        @if (ViewBag.msg != null)
        {
           
            <p class="text-center mt-3" style="color:green">@ViewBag.msg</p>
        }
    </div>
</body>